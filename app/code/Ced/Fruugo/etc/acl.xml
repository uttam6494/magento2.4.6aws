<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
<acl>
    <resources>
        <resource id="Magento_Backend::admin">
            <resource id="Ced_Fruugo::Fruugo" title="Fruugo">
                <resource id="Ced_Fruugo::fruugo_products" title="Fruugo Products">
                    <resource id="Ced_Fruugo::fruugo_products_index" title="Manage Products"></resource>
                    <resource id="Ced_Fruugo::fruugo_profiles" title="Manage Profile"></resource>
                    <resource id="Ced_Fruugo::fruugo_products_feeds" title="Manage Feeds"></resource>
                </resource>
                <resource id="Ced_Fruugo::fruugo_orders" title="Fruugo">
                    <resource id="Ced_Fruugo::view_fruugo_orders" title="Manage Orders"></resource>
                    <resource id="Ced_Fruugo::view_failed_imported_fruugo_orders_log" title="Manage Failed Orders"></resource>
                </resource>
                <resource id="Ced_Fruugo::configurations" title="Fruugo Configurations">
                    <resource id="Ced_Fruugo::configuration" title="Fruugo Configuration"></resource>
                </resource>
                <resource id="Ced_Fruugo::extra" title="Fruugo Extra">
                    <resource id="Ced_Fruugo::fruugo_knowledge_base" title="Fruugo Knowledge Base"></resource>
                    <resource id="Ced_Fruugo::fruugo_cron_crongrid" title="Fruugo Cron"></resource>
                    <resource id="Ced_Fruugo::fruugo_logs_grid" title="Fruugo Logs"></resource>
                    <resource id="Ced_Fruugo::fruugo_categories" title="Fruugo Category"></resource>
                </resource>
            </resource>
            <resource id="Magento_Backend::stores">
                <resource id="Magento_Backend::stores_settings">
                    <resource id="Magento_Config::config">
                        <resource id="Ced_Fruugo::system_config" title="Fruugo Api Config"></resource>
                    </resource>
                </resource>
            </resource>
        </resource>
    </resources>
</acl>
</config>