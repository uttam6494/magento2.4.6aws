                    <item name="childDefaults" xsi:type="array">
                        <item name="provider" xsi:type="string">fruugo_cron_index.fruugo_cron_index.listing_top.listing_filters</item>
                        <item name="imports" xsi:type="array">
                            <item name="visible" xsi:type="string">fruugo_cron_index.fruugo_cron_index.cron_columns.${ $.index }:visible</item>
                        </item>
                    </item>
                </item>
            </argument>
        </filters>


